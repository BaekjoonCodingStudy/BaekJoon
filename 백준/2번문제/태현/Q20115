#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;
int main() {

    vector<int> num;
    int N;
    cin >> N;

    int a;
    for (int i = 0; i < N;i++ ) {
        cin >> a;
        num.push_back(a); 
    }

    sort(num.begin(),num.end(),greater<int>());

    double aw = 0;
    aw = num[0] + num[1]/2.0;

    for (int i = 2; i < N;i++ ) {
        aw = aw + num[i]/2.0;
    }

    cout << aw;
    
    return 0;

    // 큰수에 작은수를 나누어서 더하는것이 무조껀 클꺼라고 생각해 역순으로 정렬을 하고 오른쪽에 있는 값을 나누어서 더하는 방법으로 풀었다
    // O(1)
}
